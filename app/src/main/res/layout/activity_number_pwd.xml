<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"

    >


    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorIngigo"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_left_white_18dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_title"
            android:text="@string/settings"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/addUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_user"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:visibility="invisible"
            android:clickable="false"/>
    </LinearLayout>


    <TextView
        android:id="@+id/numberPwdHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_standard"
        android:text="@string/inputPwd"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleLayout"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorIngigo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberPwdHint"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/first"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size_standard"
                android:digits="1234567890"
                android:textColor="@color/colorIngigo"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/second"
                android:inputType="numberPassword"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/second"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size_standard"
                android:digits="1234567890"
                android:textColor="@color/colorIngigo"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/third"
                android:inputType="numberPassword"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/third"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size_standard"
                android:digits="1234567890"
                android:textColor="@color/colorIngigo"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/fourth"
                android:inputType="numberPassword"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/fourth"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size_standard"
                android:digits="1234567890"
                android:textColor="@color/colorIngigo"
                android:inputType="numberPassword"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>