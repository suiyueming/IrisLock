<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.MainActivity">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <net.imknown.bettertextclockbackportlibrary.TextClock
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:format12Hour="yyyy-MM-dd"
                app:format24Hour="yyyy-MM-dd"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_date"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_below="@+id/dateText"
                android:id="@+id/weatherImageView"
                android:layout_width="41dp"
                android:layout_height="38dp"
                app:actualImageScaleType="center"/>
            <net.imknown.bettertextclockbackportlibrary.TextClock
                android:id="@+id/weekText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/dateText"
                android:layout_below="@+id/dateText"
                app:format12Hour="EEEE"
                app:format24Hour="EEEE"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_little"
                />
            <LinearLayout
                android:layout_below="@+id/weekText"
                android:layout_alignRight="@+id/dateText"
                android:layout_alignBottom="@+id/weatherImageView"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIngigo"
                    android:textSize="@dimen/text_size_little"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/weatherTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/colorIngigo"
                    android:textSize="@dimen/text_size_little"
                    android:paddingLeft="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:layout_above="@+id/stateLayout"
        android:layout_centerHorizontal="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/irisImage"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:viewAspectRatio="1.0"
            app:actualImageScaleType="centerCrop"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/infoImage"
            android:layout_marginTop="35dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignRight="@+id/irisImage"/>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/stateLayout"
        android:layout_above="@+id/bottomBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/safeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIngigo"
            android:textSize="@dimen/text_size_title"
            android:text="@string/state_safe"
            android:layout_gravity="center_horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="3dp"
            android:background="@color/colorText"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/powerImage"
            android:layout_marginTop="5dp"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/powerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIngigo"
            android:textSize="@dimen/text_size_power"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    
    
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_above="@+id/companyBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/alertLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/alertButton"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_alert_button"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/alertText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alert"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/adminButton"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_admin_button"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pictureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pictureButton"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_picture_button"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pictureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/authorizationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/authorizationButton"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_alert_button"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/authorizationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authorization"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/companyBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorButtonBar"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="@string/company"
        />



</RelativeLayout>
